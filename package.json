{
  "name": "proyecto-de-pruebas-en-node",
  "version": "1.0.0",
  "main": "src/app.js",
  "description": "E-commerce API desarrollado en Node.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "perf:productos": "k6 run --env BASE_URL=http://localhost:3000 tests/k6/productos.performance.js",
    "perf:usuarios": "k6 run --env BASE_URL=http://localhost:3000 tests/k6/usuarios.performance.js",
    "perf:pedidos": "k6 run --env BASE_URL=http://localhost:3000 tests/k6/pedidos.performance.js",
    "perf:all": "node -e \"console.log('Ejecuta: tests/k6/run-performance-tests.ps1 (Windows) o tests/k6/run-performance-tests.sh (Linux/macOS)')\"",
    "k6:install": "echo 'Instala k6 desde: https://k6.io/docs/getting-started/installation/'"
  },
  "keywords": [
    "nodejs",
    "express",
    "ecommerce",
    "api",
    "mysql"
  ],
  "author": "ChimbaAlexis",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "http-server": "^14.1.1",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@eslint/js": "^9.31.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.31.0",
    "jest": "^29.7.0",
    "jsdom": "^26.1.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "public/js/**/*.js",
      "!src/app.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/coverage/"
    ]
  }
}
